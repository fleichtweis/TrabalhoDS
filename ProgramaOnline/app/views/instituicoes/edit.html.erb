<div class="row">
	<div class="span12">
		<ul class="breadcrumb">
			<li class="active">Instituições<span class="divider">&raquo;</span></li>
			<li class="active">Editar</li>
		</ul>
	</div>
</div>

<div class="row">
	<%= form_tag({:action => 'update'}, {:class => 'form-horizontal'}) do %>
		<fieldset>
			<legend>EDITAR INSTITUIÇÃO</legend>
			<div class="control-group">
				<label class="control-label" for="instituicao_cnpj">CNPJ</label>
				<div class="controls">
					<%= text_field :instituicao, :cnpj, :value => @instituicao.first[0] %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="instituicao_nome">NOME</label>
				<div class="controls">
					<%= text_field :instituicao, :nome, :value => @instituicao.first[1] %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="instituicao_endereco">CIDADE</label>
				<div class="controls">
					<%= select_tag 'instituicao[cidade_id]', options_for_select(@cidades, @instituicao.first[2]) %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="instituicao_endereco">ENDEREÇO</label>
				<div class="controls">
					<%= text_field :instituicao, :endereco, :value => @instituicao.first[3] %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="instituicao_telefone">TELEFONE</label>
				<div class="controls">
					<%= text_field :instituicao, :telefone, :value => @instituicao.first[4] %>
				</div>
			</div>
	
			<div class="options btn-group">
				<%= button_tag(type: 'submit', class: "btn btn-primary") do %><i class="icon-check icon-white"></i> SALVAR<% end %>
				<%= link_to "<i class='icon-remove'></i> CANCELAR".html_safe, {:action => :index}, :class => 'btn' %>
			</div>
		</fieldset>
	<% end %>
</div>
