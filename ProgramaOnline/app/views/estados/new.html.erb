<div class="span12 pull-right">
	<ul class="breadcrumb">
		<li class="active">Estados<span class="divider">&raquo;</span></li>
		<li class="active">Adicionar</li>
	</ul>
</div>

<div class="span12 pull-right">
	<%= form_tag({:action => 'create'}, {:class => 'form-horizontal'}) do %>
		<fieldset>
			<legend>CADASTRAR ESTADO</legend>	
			<div class="control-group">
				<label class="control-label" for="estado_nome">NOME</label>
				<div class="controls">
					<%= text_field :estado, :nome, {:placeholder => 'nome'} %>
				</div>
			</div>
			<div class="control-group">
				<label for="estado_sigla" class="control-label">SIGLA</label>
				<div class="controls">
					<%= text_field :estado, :sigla, {:placeholder => 'sigla', :maxlength => 2} %>	
				</div>
			</div>
			
			<div class="options btn-group">
				<%= button_tag(type: 'submit', class: "btn btn-primary") do %><i class="icon-check icon-white"></i> SALVAR<% end %>
				<%= link_to "<i class='icon-remove'></i> CANCELAR".html_safe, {:action => :index}, :class => 'btn' %>
			</div>
		</fieldset>
	<% end %>
</div>
