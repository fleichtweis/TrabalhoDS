<table class="table table-hover">
	<thead>
		<th>ESTADO</th>
		<th>SIGLA</th>
		<th>&nbsp;</th>
	</thead>
	<tbody>
	<% @estados.to_a.each do |estado| %>
		<tr>
			<td><%= estado[1] %></td>
			<td><%= estado[2] %></td>
			<td>
				<%= link_to "Editar", {:action => :edit, :id => estado[0]} %>
				<%= link_to "Excluir", {:action => :delete, :id => estado[0]}, {:method => :post, :confirm => 'Tens certeza?'} %>
			</td>
		</tr>	
	<% end %>
	</tbody>
</table>
